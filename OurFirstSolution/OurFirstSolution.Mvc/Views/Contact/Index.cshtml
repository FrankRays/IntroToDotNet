@model OurFirstSolution.Models.ContactMeViewModel

@{
    ViewBag.Title = "Contact Me";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.FromEmail)
        @Html.EditorFor(model => model.FromEmail, new {htmlAttributes = new {@class = "form-control"}})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Subject)
        @Html.EditorFor(model => model.Subject, new {htmlAttributes = new {@class = "form-control"}})
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Message, new {htmlAttributes = new {@class = "form-control", rows = 6, placeholder = "Message"}})
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
}